@using BookCarProjectMaster.Models
@model List<CartItem>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutCartItem.cshtml";
}

<table class="table table-dark">
    <tr>
        <td>Tên Xe</td>
        <td>Giá Thuê</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.tenXe</td>
            <td>@item.giaThue $</td>
        </tr>
    }
    <tr>
        <td>Tổng tiền thuê: @ViewBag.Tongtien $</td>
    </tr>
</table>
<div class="text-center">
    @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "Giohang", "CartItemBC", new { @class = "book-now-btn" })
    <hr />
</div>
@*form đăng kí đặt xe*@
<div class="review-area">
    <h5>Thông tin của bạn </h5>
    <hr />
    <div class="review-form">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

        <form method="post" id="form-validate">
            <div class="row">
                <div class="col-lg-6 col-md-6 p-3">
                    <div class="name-input">
                        <input type="text" name="hoTen" placeholder="Nhập họ tên của bạn (Nguyễn Văn A)" required />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 p-3">
                    <div class="name-input">
                        <input type="text" name="diaChi" placeholder="Nhập địa chỉ" required />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 p-3">
                    <div>
                        <input type="text" name="sdt" placeholder="Nhập số điện thoại (038XXXXXXX)" required />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 p-3">
                    <div class="name-input">
                        <input type="text" name="cmnd" placeholder="Nhập số chứng minh nhân dân (301XXXXXX)" required />
                    </div>
                </div>
                @*Người dùng được quyền chọn ngày trả và ngày nhận xe*@
                <div class="col-lg-6 col-md-6 p-3">
                    <h6 class="p-2">Ngày nhận xe: </h6>
                    <div>
                        <input type="date" name="ngayNhan" placeholder="Chọn ngày" required />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 p-3">
                    <h6 class="p-2">Ngày trả xe: </h6>
                    <div>
                        <input type="date" name="ngayTra" required />
                    </div>
                </div>
                @*Ngày đặt Xe Lấy Giờ hiện Tại của hệ thống*@
                <div class="col-lg-6 col-md-6 p-3">
                    <div>
                        <h5>Ngày đặt xe: @DateTime.Now.ToShortDateString()</h5>
                    </div>
                </div>
            </div>
            @*Khi Nhấn Submit Thành công giao diện người dùng được chuyển sang trang Xacnhan.cshtml để biết mình đã dặt xe thành công*@
            <div>
                <div class="input-submit">
                    <button type="submit">ĐỒNG Ý ĐẶT XE</button>
                </div>
            </div>
        </form>

        }
    </div>
</div>